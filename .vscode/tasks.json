{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "${workspaceFolder}/xormove.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:Configuration=Release",
                "/property:Platform=x64",
                "${workspaceFolder}/xormove.sln"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/target:Clean",
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "${workspaceFolder}/xormove.sln"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Rebuild Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/target:Rebuild",
                "/property:Configuration=Debug",
                "/property:Platform=x64",
                "${workspaceFolder}/xormove.sln"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        }
    ]
}
